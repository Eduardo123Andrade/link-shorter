{
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/_next/(.*)",
            "destination": "/_next/$1"
        },
        {
            "source": "/favicon.ico",
            "destination": "/favicon.ico"
        },
        {
            "source": "/404",
            "destination": "/404.html"
        },
        {
            "source": "/:shortLink",
            "destination": "/[shortLink].html"
        }
    ]
}